{
	"compilerOptions": {
		"target": "ES2017",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"plugins": [
			{
				"name": "next"
			}
		],
		"baseUrl": "src/",
		"paths": {
			"@/client-utils/*": ["app/utils/*"],
			"@/actions/*": ["lib/actions/*"],
			"@/components/*": ["app/components/*"],
			"@/lib/*": ["lib/*"],
			"@/fonts/*": ["styles/fonts"],
			"@/styles/*": ["styles/*"],
			"@/server-utils/*": ["lib/utils/*"],
			"@/models/*": ["lib/models/*"],
			"@/hooks/*": ["app/hooks/*"],
			"@/mytypes/*": ["lib/types/*"],
			"@/interfaces/*": ["lib/types/interfaces/*"]
		}
	},
	"include": [
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx",
		".next/types/**/*.ts",
		"postcss.config.mjs"
	],
	"exclude": ["node_modules"]
}
